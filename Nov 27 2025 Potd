class Solution {
public:
    long long maxSubarraySum(vector<int>& nums, int k) {
        long long prefSum = 0; 
        long long subMax = LLONG_MIN; 

        // minSoFar[m] stores the minimum prefix sum for indices â‰¡ m (mod k)
        vector<long long> minSoFar(k, LLONG_MAX / 2);
        minSoFar[(k - 1) % k] = 0; // prefix sum before first element

        for (int i = 0; i < nums.size(); i++) {
            prefSum += nums[i];

            // candidate answer
            subMax = max(subMax, prefSum - minSoFar[i % k]);

            // update minimum prefix sum for this mod group
            minSoFar[i % k] = min(minSoFar[i % k], prefSum);
        }

        return subMax;
    }
};
